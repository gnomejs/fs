{
    "name": "@gnome/fs",
    "version": "0.0.0",
    "exports": {
        ".": "./mod.ts",
        "./deno": "./deno/mod.ts",
        "./node": "./node/mod.ts",
        "./constants": "./constants.ts"
    },

    "compilerOptions": {
        "lib": ["deno.window"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 120,
        "exclude": ["**/*.md"]
    },

    "tasks": {
        "test": "deno test -A",
        "coverage": "deno test --coverage=.artifacts/code-coverage -A",
        "lcov": "deno coverage .artifacts/code-coverage --lcov > .artifacts/code-coverage.lcov"
    },

    "publish": {
        "include": [
            "mod.ts",
            "env.deno.ts",
            "env.node.ts",
            "env.browser.ts",
            "constants.ts",
            "expand.ts",
            "types.ts",
            "README.md",
            "LICENSE.md",
            "deno.json"
        ]
    },
    "imports": {
        "@gnome/char": "jsr:@gnome/char@^0.0.0",
        "@gnome/os-constants": "jsr:@gnome/os-constants@^0.0.0",
        "@gnome/runtime-constants": "jsr:@gnome/runtime-constants@^0.0.0",
        "@gnome/strings": "jsr:@gnome/strings@^0.1.0",
        "@std/assert": "jsr:@std/assert@^0.224.0",
        "@std/path": "jsr:@std/path@^0.224.0"
    }
}
